{
  "name": "portal-cliente-back-end",
  "version": "0.0.0",
  "description": "Initial server using node.js SDK APIs",
  "main": "app.js",
  "scripts": {
    "start": "node dist/app.js",
    "build-local": "npm run clean && npm run swagger-gen-local && npm run routes-gen && npm run build-ts",
    "build-ts": "tsc && npm run copy-dependencies",
    "tslint": "tslint -c tslint.json -p tsconfig.json --force",
    "clean": "rimraf ./dist/*",
    "tsoa": "tsoa",
    "routes-gen": "tsoa routes",
    "swagger-gen-local": "tsoa swagger --host localhost:3000",
    "swagger-gen-server": "tsoa swagger --host dev-server.w3ibm.mybluemix.net",
    "build-server": "npm run clean && npm run swagger-gen-server && npm run routes-gen && npm run build-ts && npm run copy-dev",
    "build-int": "npm run clean && npm run swagger-gen-int && npm run routes-gen && npm run build-ts && npm run copy-int",
    "swagger-gen-int": "tsoa swagger --host int-server.mybluemix.net",
    "copy-dev": "copyfiles -f ./config/dev/manifest.yml ./",
    "copy-int": "copyfiles -f ./config/int/manifest.yml ./",
    "copy-dependencies": "copy-node-modules . dist"
  },
  "license": "Apache-2.0",
  "dependencies": {
    "ajv": "6.5.2",
    "body-parser": "1.18.3",
    "copy-node-modules": "1.0.8",
    "cors": "2.8.4",
    "express": "4.16.3",
    "express-force-https": "1.0.0",
    "log4js": "3.0.4",
    "moment": "2.22.2",
    "multer": "^1.4.1",
    "request": "^2.88.0",
    "request-promise": "^4.2.2",
    "swagger-ui-express": "3.0.10",
    "tslib": "1.9.3",
    "tsoa": "2.1.8",
    "yamljs": "0.3.0"
  },
  "devDependencies": {
    "@types/body-parser": "1.17.0",
    "@types/bytebuffer": "5.0.37",
    "@types/cookie-parser": "1.4.1",
    "@types/cors": "2.8.4",
    "@types/express": "4.16.0",
    "@types/node": "8.5.2",
    "@types/yamljs": "0.2.30",
    "copyfiles": "2.0.0",
    "rimraf": "2.6.2",
    "ts-node": "7.0.0",
    "tslint": "5.11.0",
    "typescript": "3.0.1"
  }
}
